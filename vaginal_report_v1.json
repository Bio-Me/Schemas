{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$defs": {
        "productSchema": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "minLength": 1
              },
              "version": {
                "type": "string",
                "minLength": 1
              }
            },
            "required": [
              "name",
              "version"
            ]
        },
        "communityStateTypeAnalysisSchema" : {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "minLength": 1
              },
              "assignment_method": {
                "type": "string",
                "minLength": 1
              },
              "value": {
                "type": "string",
                "minLength": 1
              }
            },
            "required": [
              "name",
              "version",
              "value"
            ]
        }
    },
    "properties" : {
        "product" : {"$ref": "#/$defs/productSchema"}
    },
    "required" : [
        "product"
    ]
}